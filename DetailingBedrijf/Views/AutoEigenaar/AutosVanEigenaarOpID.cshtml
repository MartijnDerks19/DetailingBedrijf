@model IEnumerable<DomeinLaag.Models.AutoEigenaarModel>

@{
    ViewData["Title"] = "AutosVanEigenaarOpID";
}

<h1>Autos van eigenaar</h1>

<p>
    <a asp-action="Aanmaken">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EigenaarID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutosEigenaar[0].Merk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutosEigenaar[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutosEigenaar[0].Bouwjaar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutosEigenaar[0].AutoID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EigenaarID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutosEigenaar[0].Merk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutosEigenaar[0].Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutosEigenaar[0].Bouwjaar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutosEigenaar[0].AutoID)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.EigenaarID }) |
                @Html.ActionLink("Delete", "Verwijderen", new { id = item.EigenaarID })
            </td>
        </tr>
}
    </tbody>
</table>
